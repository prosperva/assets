@model SAAssetManagement.Models.Employee

@{
    ViewBag.Title = "Details";
}

<h2>Details for: @Html.DisplayFor(model => model.EmployeeFirstName) @Html.DisplayFor(model => model.EmployeeLastName)</h2>

@if(@Model.Assets.Count > 0){
<text>
    <table class="table table-striped table-bordered">
        <tr>
            <th>Asset Tag</th>
            <th>Asset Type</th>
            <th>Workstation Type</th>
        </tr>
        @foreach (var item in @Model.Assets)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.AssetTag)</td>
                <td>@Html.DisplayFor(modelItem => item.AssetType.AssetTypeName)</td>
                <td>@Html.DisplayFor(modelItem => item.WorkStationType.WorkStationTypeName)</td>
            </tr>
        }
</table>
</text>
}
else{
    <text>
        <div class="alert alert-info">This user has no assets</div>
    </text>
}

