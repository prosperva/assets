@model IEnumerable<SAAssetManagement.Models.Division>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="divisionlist" class="display table table-striped table-bordered" border="1">
<thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DivisionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastUpdatedOn)
        </th>
        <th></th>
    </tr>
</thead>
<tbody>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DivisionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedOn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastUpdatedOn)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DivisionID }) |
            @Html.ActionLink("Details", "Details", new { id=item.DivisionID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DivisionID })
        </td>
    </tr>
}
</tbody>
</table>

@section scripts{
<script type="text/javascript">
    $(document).ready(function () {
        $('#divisionlist').dataTable({
            "bJQueryUI": true,
            "sPaginationType": "full_numbers"
        });
    });
</script>
}