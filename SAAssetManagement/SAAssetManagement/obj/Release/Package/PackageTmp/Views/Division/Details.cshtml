<h2>@Html.DisplayFor(model => model.Assets.Count) Assets</h2>
<table class="table table-striped table-bordered">
        <tr>
            <th>PO Number</th>
            <th>Branch</th>
            <th>Asset Tag</th>
            <th>Asset Type</th>
            <th>User</th>
            <th>Workstation Type</th>
            <th>Notes</th>
        </tr>
        @foreach (var item in @Model.Assets.OrderBy(t => t.AssetType.AssetTypeName))
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.PONumber)</td>
                <td>@Html.DisplayFor(modelItem => item.Branch.BranchName)</td>
                <td>@Html.DisplayFor(modelItem => item.AssetTag)</td>
                <td>@Html.DisplayFor(modelItem => item.AssetType.AssetTypeName)</td>
                <td>@Html.DisplayFor(modelItem => item.Employee.EmployeeFirstName) @Html.DisplayFor(modelItem => item.Employee.EmployeeLastName)</td>
                <td>@Html.DisplayFor(modelItem => item.WorkStationType.WorkStationTypeName)</td>
                <td>@Html.DisplayFor(modelItem => item.Notes)</td>
            </tr>
        }
</table>

